{% extends "base.html.twig" %}

{% block title %}
{{trip.title}} {% endblock %}

{% block body %}
<section class="text-gray-400 bg-gray-900 body-font">
  <div class="container px-5 py-24 mx-auto flex flex-wrap">
    <div class="lg:w-1/2 sm:w-1/3 w-full rounded-lg overflow-hidden mt-6 sm:mt-0  sm:pr-5">    </div>
    <div class="flex flex-wrap -mx-4 lg:w-1/2 sm:w-2/3 content-between">
      <div class="w-full sm:p-4 px-4 mb-6">
        <h1 class="title-font font-medium text-xl mb-2 text-white">
            {{trip.title}}
        </h1>
        <div class="leading-relaxed">
          <p class="text-base leading-relaxed mt-2">{{ trip.description}}</p>
        </div>
      </div>
      <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
        <h2 class="title-font font-medium text-3xl text-white">price</h2>
        <p class="leading-relaxed">{{trip.price}}</p>
      </div>
    </div>
  </div>
</section>
{% endblock %}